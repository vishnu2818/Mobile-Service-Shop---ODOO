<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- QWeb template for PDF -->
        <template id="report_customer_details">
            <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="row">
                    <div class="col-xs-9 text-right">
                        <span></span><h1>Mobile Service Shop Report</h1>
                    </div>
                    <div class="col-xs-3">
                        <img t-att-src="'/mobile_service_shop/static/description/logo.png'" style="max-height: 80px;"/>
                    </div>
                </div>
                <!-- Header -->
                <div class="page">
                    <div class="oe_structure"/> 
                        <h2 class="mt16">
                            <span>Order # </span>
                            <span t-field="docs.sequence"/>
                        </h2>
                        <div class="row mt32 mb32" id="informations">
                            <div class="col-auto col-3 mw-100 mb-2">
                                <strong>Product Details :</strong>
                            </div>
                        </div>
                </div>
                <!-- /....Header -->
                <!-- Body -->
                <div class="main">
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Customer Name</th>
                                <th>Product Name</th>
                                <th>Phone Number</th>
                                <th>OS Type</th>
                                <th>Mobile Brand</th>
                                <th>Status</th>
                            </tr>
                            <!-- <tr>
                                <th>Total :</th>
                            </tr> -->
                        </thead>
                        <tbody>
                            <!-- Check if docs is not empty before iterating -->
                            <t t-if="docs">
                                <tr t-foreach="docs" t-as="o">
                                    <td><span t-esc="o.customer_id.name"/></td>
                                    <td><span t-esc="o.mobile_service_line_ids.product_id.name"/></td>
                                    <td><span t-esc="o.customer_phone"/></td>
                                    <td><span t-esc="o.mobile_os_type"/></td>
                                    <td><span t-esc="o.company_id.name"/></td>
                                    <td><span t-esc="o.state"/></td>
                                </tr>
                                <!-- <tr class="border-black o_total">
                                    <td name="sub_total"><strong>Sub Total</strong></td>
                                    <td name="sub_total">
                                    <span t-field="o.mobile.service.line.sub_total"/>
                                </td>
                                </tr> -->
                                <tr class="border-black o_total">
                                    <td name="total"><strong>Total :</strong></td>
                                    <td name="total"><span t-esc="docs.total"/></td>
                                </tr>
                            </t>
                             
                            <!-- When....empty display a message -->
                            <t t-else="">
                                <tr>
                                    <td colspan="5">No data available</td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
                <!-- /Body  End-->
                <!-- Footer  Strt-->
                <!-- <div class="footer">
                    <div class="row">
                        <div class="col-xs-12 text-center">
                            <p>Generated by Vinu...!</p>
                        </div>
                    </div>
                </div> -->
                <!-- /Footer -->
            </t>
            </t>
        </template>
    </data>
</odoo>
